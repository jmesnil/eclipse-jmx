<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="net.jmesnil.jmx.ui.attribute.controls" name="Attribute Controls" schema="schema/attributeControls.exsd"/>
   <extension-point id="net.jmesnil.jmx.ui.attribute.bindings" name="Attribute Bindings" schema="schema/attributeBindings.exsd"/>
   <extension-point id="net.jmesnil.jmx.ui.providerUI" name="Connection Provider UI" schema="schema/providerUI.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="JMX"
            id="net.jmesnil.jmx.ui.views">
      </category>
      <view
            category="net.jmesnil.jmx.ui.views"
            class="net.jmesnil.jmx.ui.internal.views.navigator.Navigator"
            icon="icons/sample.gif"
            id="net.jmesnil.jmx.ui.internal.views.navigator.MBeanExplorer"
            name="MBean Explorer 5"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="net.jmesnil.jmx.ui.internal.views.navigator.MBeanExplorer">
      </viewer>
      <viewerContentBinding
            viewerId="net.jmesnil.jmx.ui.internal.views.navigator.MBeanExplorer">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="net.jmesnil.jmx.ui.internal.views.navigator.root">
            </contentExtension>
            <contentExtension
                  pattern="net.jmesnil.jmx.ui.internal.views.navigator.JMXLinkHelper">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding
            viewerId="net.jmesnil.jmx.ui.internal.views.navigator.MBeanExplorer">
         <includes>
            <actionExtension
                  pattern="net.jmesnil.jmx.ui.internal.views.navigator.actionProvider">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.linkHelper">
      <linkHelper
            class="net.jmesnil.jmx.ui.internal.views.navigator.JMXLinkHelper"
            id="net.jmesnil.jmx.ui.internal.views.navigator.JMXLinkHelper">
         <selectionEnablement>
            <or>
               <instanceof
                     value="net.jmesnil.jmx.core.IConnectionWrapper">
               </instanceof>
               <instanceof
                     value="net.jmesnil.jmx.core.tree.Node">
               </instanceof>
               <instanceof
                     value="net.jmesnil.jmx.core.MBeanFeatureInfoWrapper">
               </instanceof>
            </or>
         </selectionEnablement>
         <editorInputEnablement>
            <not>
               <instanceof
                     value="java.lang.Object">
               </instanceof>
            </not>
         </editorInputEnablement>
      </linkHelper>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="net.jmesnil.jmx.ui.internal.views.navigator.MBeanExplorerContentProvider"
            icon="icons/sample.gif"
            id="net.jmesnil.jmx.ui.internal.views.navigator.root"
            labelProvider="net.jmesnil.jmx.ui.internal.views.navigator.MBeanExplorerLabelProvider"
            name="MBeans"
            priority="normal">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.ui.IViewPart">
            </instanceof>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="net.jmesnil.jmx.ui.internal.tree.Node">
               </instanceof>
               <instanceof
                     value="net.jmesnil.jmx.core.IConnectionProvider">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
      <actionProvider
            class="net.jmesnil.jmx.ui.internal.views.navigator.ActionProvider"
            id="net.jmesnil.jmx.ui.internal.views.navigator.actionProvider">
         <enablement>
            <or>
               <adapt
                     type="java.util.Collection">
                  <count
                        value="0">
                  </count>
               </adapt>
               <instanceof
                     value="net.jmesnil.jmx.core.IConnectionWrapper">
               </instanceof>
               <instanceof
                     value="net.jmesnil.jmx.core.tree.Node">
               </instanceof>
            </or>
         </enablement>
      </actionProvider>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="MBean Editor"
            id="net.jmesnil.jmx.ui.internal.editors.MBeanEditor"
            class="net.jmesnil.jmx.ui.internal.editors.MBeanEditor"
            extensions="jmx"
            icon="icons/releng_gears.gif">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
         <actionSet
            label="%MBeanActionSet.label"
            description="%MBeanActionSet.description"
            visible="false"
            id="net.jmesnil.jmx.ui.MBeanActionSet">
           <action
               id="openMBean"
               class="net.jmesnil.jmx.ui.internal.actions.OpenMBeanAction"
               definitionId="net.jmesnil.jmx.ui.navigate.open.mbean"
               label="%OpenMBeanAction.label"
               menubarPath="navigate/open.ext2"
               tooltip="%OpenMBeanAction.tooltip">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="net.jmesnil.jmx.ui.internal.perspectives.JMXPerspective"
            icon="icons/releng_gears.gif"
            id="net.jmesnil.jmx.ui.perspectives.JMXPerspective"
            name="JMX">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="net.jmesnil.jmx.ui.perspectives.JMXPerspective">
           <actionSet
               id="net.jmesnil.jmx.ui.MBeanActionSet" />
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            name="%ActionDefinition.openMBean.name"
            description="%ActionDefinition.openMBean.description"
            categoryId="org.eclipse.ui.category.navigate"
            id="net.jmesnil.jmx.ui.navigate.open.mbean">
      </command>    
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
           sequence="M1+M2+M"
           commandId="net.jmesnil.jmx.ui.navigate.open.mbean"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"/>
   </extension>
   <extension
         point="net.jmesnil.jmx.ui.attribute.controls">
      <control
            id="net.jmesnil.jmx.ui.attribute.displays.Text"
            class="net.jmesnil.jmx.ui.internal.controls.TextControlFactory"
	      	type="java.lang.String">
      </control>
      <control
            id="net.jmesnil.jmx.ui.attribute.displays.Array"
            class="net.jmesnil.jmx.ui.internal.controls.ArrayControlFactory"
            type="java.lang.reflect.Array">
      </control>
      <control
            id="net.jmesnil.jmx.ui.attribute.displays.Boolean"
            class="net.jmesnil.jmx.ui.internal.controls.BooleanControlFactory"
            type="java.lang.Boolean">
      </control>
      <control
            id="net.jmesnil.jmx.ui.attribute.displays.Collection"
            class="net.jmesnil.jmx.ui.internal.controls.CollectionControlFactory"
            type="java.util.Collection">
      </control>
      <control
            id="net.jmesnil.jmx.ui.attribute.displays.Map"
            class="net.jmesnil.jmx.ui.internal.controls.MapControlFactory"
            type="java.util.Map">
      </control>
      <control
            id="net.jmesnil.jmx.ui.attribute.displays.CompositeData"
            class="net.jmesnil.jmx.ui.internal.controls.CompositeDataControlFactory"
            type="javax.management.openmbean.CompositeData">
      </control>
      <control
            id="net.jmesnil.jmx.ui.attribute.displays.TabularData"
            class="net.jmesnil.jmx.ui.internal.controls.TabularDataControlFactory"
            type="javax.management.openmbean.TabularData">
      </control>
   </extension>
   <extension
         point="net.jmesnil.jmx.ui.providerUI">
      <providerUI
            icon="icons/full/obj16/write_obj.gif"
            id="net.jmesnil.jmx.core.internal.providers.DefaultConnectionProvider"
            name="Default JMX Connection">
         <wizardPage
               class="net.jmesnil.jmx.ui.internal.wizards.DefaultConnectionWizardPage">
         </wizardPage>
      </providerUI>
   </extension>
</plugin>
